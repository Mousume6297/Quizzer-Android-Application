<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#C6DDE7"
    tools:context=".QuestionEngActivity">

    <RelativeLayout
        android:background="@color/blueee"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"/>

    <TextView
        android:id="@+id/timertext"
        android:layout_width="295dp"
        android:layout_height="49dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="textview"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="397dp"
        android:layout_height="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7sp"
        app:cardCornerRadius="10sp">

        <TextView
            android:id="@+id/card_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="20dp"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/carda"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:onClick="OptionAClick"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/card_optiona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="OptionBClick"
        android:id="@+id/cardb"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="298dp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/card_optionb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="B"
            android:textSize="20dp"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardc"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="369dp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:onClick="OptionCClick"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/card_optionc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="OptionDClick"
        android:id="@+id/cardd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="443dp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/card_optiond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="D"
            android:textSize="20dp"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/nxtbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:background="@drawable/next_btn"
        android:backgroundTint="@color/blueee">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textAllCaps="true"/>



    </LinearLayout>

</RelativeLayout>